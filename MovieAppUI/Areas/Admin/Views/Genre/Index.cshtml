@model IEnumerable<OldGenreDto>

@{
    ViewData["Title"] = "List of genres";
}

<h1>Genres</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success btn-sm">Add new genre</a>
</p>
<div class="col-md-4">
    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var index = 1;
                    <tr>
                        <th>
                            @(index++).
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.GenreID" class="btn btn-outline-info btn-sm">Edit</a> 
                            <a asp-action="Details" asp-route-id="@item.GenreID" class="btn btn-primary btn-sm">Details</a> 
                            <a asp-action="Delete" asp-route-id="@item.GenreID" class = "btn btn-outline-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-danger">
            There are no genres registered.
        </p>
    }
    @await Html.PartialAsync("_ResponseMessage", "GenreMessage")
</div>