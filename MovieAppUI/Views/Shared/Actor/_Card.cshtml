﻿@using MovieAppUI.Models.ViewModels
@model CardActorVm
<div class="card">
    <div class="card-body">
        <h6 class="card-subtitle mb-2 text-body-secondary">@Html.DisplayFor(m => Model.FirstName)</h6>
        <h5 class="card-title">@Html.DisplayFor(m => Model.LastName)</h5>
        <p class="card-text">@Html.DisplayFor(m => Model.Nationality)</p>
        <a asp-action="Details" asp-route-id="@Model.ActorID" class="card-link">Movies</a>
        <a asp-action="ContactInfo" asp-route-id="@Model.ActorID" class="card-link">Contact Info</a>
    </div>
</div>