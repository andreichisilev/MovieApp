@model IEnumerable<MovieAppUI.Models.ViewModels.CardActorVm>
@{
    ViewData["Title"] = "List of actors";
}

<section class="row">
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <article class="me-2 col-lg-2">
                @await Html.PartialAsync("Actor/_Card", item)
            </article>
        }
    }
    else
    {
        <article class="alert alert-warning" role="alert">There is no actor!</article>
    }
</section>